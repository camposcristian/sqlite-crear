   -for (var i = 0; i < max; ++i)
     tr
       td #{vector[i].id} 
       td #{vector[i].nombre} 
       td #{vector[i].apellido}
       td #{vector[i].cedula}
       td #{vector[i].fechanac}
       td #{vector[i].subempresa}
